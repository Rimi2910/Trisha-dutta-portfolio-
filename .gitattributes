  <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
  <script>AOS.init({ duration: 1000, once: true });</script>
  <script>
    const phrases = ["Frontend Developer", "Electronics Engineer", "UI/UX Enthusiast", "Python Learner"];
    let currentPhrase = 0, currentLetter = 0;
    const el = document.getElementById("typewriter");
    function type() {
      if (currentLetter <= phrases[currentPhrase].length) {
        el.innerText = phrases[currentPhrase].substring(0, currentLetter++);
        setTimeout(type, 100);
      } else {
        setTimeout(erase, 2000);
      }
    }
    function erase() {
      if (currentLetter > 0) {
        el.innerText = phrases[currentPhrase].substring(0, --currentLetter);
        setTimeout(erase, 50);
      } else {
        currentPhrase = (currentPhrase + 1) % phrases.length;
        setTimeout(type, 500);
      }
    }
    type();
  </script>
